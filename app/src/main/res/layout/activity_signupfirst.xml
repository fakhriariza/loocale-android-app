<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".boarding.SingUpFirstActivity">

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_58sdp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/ivLoocale"
            android:layout_width="@dimen/_61sdp"
            android:layout_height="@dimen/_43sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/loocalelogolite"
            android:layout_marginBottom="@dimen/_11sdp"/>

        <ImageView
            android:id="@+id/ivBackArrow"
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_14sdp"
            android:background="@drawable/ic_vector__3_"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_21sdp"/>

        <View
            android:id="@+id/vChild"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:layout_alignParentBottom="true"
            android:background="@color/loocale_greyBackground"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlHeader">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_36sdp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSignUpTitle"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/signup_title"
                android:textAlignment="center"
                android:textColor="@color/loocale_title"
                android:textSize="@dimen/_28ssp" />

            <LinearLayout
                android:layout_width="@dimen/_260sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_34sdp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    app:backgroundTint="@color/black_loocale"
                    android:textCursorDrawable="@drawable/black_cursor"
                    android:hint="Ketik Alamat Email Kamu"
                    android:textSize="@dimen/_16ssp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:background="@drawable/primary_button"
                    android:fontFamily="@font/poppins_bold"
                    android:includeFontPadding="false"
                    android:text="Sign Up"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="@dimen/_260sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_34sdp">

                <View
                    android:id="@+id/view1"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@color/loocale_greyscale" />

                <TextView
                    android:id="@+id/tvOr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/poppins_medium"
                    android:text="atau"
                    android:textSize="@dimen/_16ssp" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@color/loocale_greyscale" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlSignUpGoogle"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_34sdp"
                android:background="@drawable/background_white_shadow"
                android:paddingHorizontal="@dimen/_13sdp"
                android:paddingVertical="@dimen/_14sdp">

                <ImageView
                    android:id="@+id/ivGoogle"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_logo_googleg_48dp" />

                <TextView
                    android:id="@+id/tvGoogleSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Sign Up with Google"
                    android:textSize="@dimen/_14ssp" />
            </RelativeLayout>

            <TextView
                android:layout_width="@dimen/_260sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_36sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="Dengan mendaftar, kamu menyetujui Syarat dan Ketentuan, Kebijakan Privasi, dan Penggunaan Cookies"
                android:textColor="@color/loocale_anothergrey"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/tvGoToSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/poppins_bold"
                android:text="Sudah punya akun Loocale? Sign In"
                android:textColor="@color/loocale_title"
                android:textSize="@dimen/_13ssp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>