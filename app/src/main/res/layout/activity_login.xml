<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginsignup.FirstSignUpActivity">

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_58sdp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/ivLoocale"
            android:layout_width="@dimen/_61sdp"
            android:layout_height="@dimen/_43sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/loocalelogolite"
            android:layout_marginBottom="@dimen/_11sdp"/>

        <ImageView
            android:id="@+id/ivBackArrow"
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_14sdp"
            android:background="@drawable/ic_vector__3_"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_21sdp"/>

        <View
            android:id="@+id/vChild"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:layout_alignParentBottom="true"
            android:background="@color/loocale_greyBackground"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlHeader">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_36sdp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSignInTitle"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:text="Sign In"
                android:textAlignment="center"
                android:textColor="@color/loocale_title"
                android:textSize="@dimen/_28ssp" />

            <TextView
                android:id="@+id/tvSignInSubtitle"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_regular"
                android:text="Mari menjelajah kembali bersama Loocale!"
                android:textAlignment="center"
                android:textColor="@color/loocale_title"
                android:textSize="@dimen/_13ssp" />

            <LinearLayout
                android:layout_width="@dimen/_260sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_34sdp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:background="@drawable/edittext_backgroundlogin"
                    android:hint="Username atau Email"
                    android:inputType="text"
                    android:textCursorDrawable="@drawable/black_cursor"
                    android:paddingStart="@dimen/_7sdp"
                    android:textSize="@dimen/_11ssp" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:background="@drawable/edittext_backgroundlogin"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textCursorDrawable="@drawable/black_cursor"
                    android:paddingStart="@dimen/_7sdp"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/tvError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Username/Email dan Password Tidak Sesuai atau Belum Didaftarkan"
                    android:textAlignment="center"
                    android:textColor="@color/loocale_red"
                    android:textSize="@dimen/_11ssp"
                    android:visibility="gone"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSignIn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:background="@drawable/primary_button"
                    android:fontFamily="@font/poppins_bold"
                    android:includeFontPadding="false"
                    android:text="Sign In"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="@dimen/_260sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_34sdp">

                <View
                    android:id="@+id/view1"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@color/loocale_greyscale" />

                <TextView
                    android:id="@+id/tvOr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/poppins_medium"
                    android:text="atau"
                    android:textSize="@dimen/_16ssp" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@color/loocale_greyscale" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlSignUpGoogle"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_34sdp"
                android:background="@drawable/background_white_shadow"
                android:paddingHorizontal="@dimen/_13sdp"
                android:paddingVertical="@dimen/_14sdp">

                <ImageView
                    android:id="@+id/ivGoogle"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_logo_googleg_48dp" />

                <TextView
                    android:id="@+id/tvGoogleSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Sign In with Google"
                    android:textSize="@dimen/_14ssp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/elipses"/>
</RelativeLayout>